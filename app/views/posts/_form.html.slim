#upload-image.card
  .head
    p.title Upload your image
    p.notice File should be Jpeg, Png...
  .body
    #upload-zone
      p.advice Drag & Drop your image here
    |Or
    .button-wrapper
      label.pseudo-button.normal[for="upload-input"] Choose a file
      input#upload-input[type="file"]

#upload-image-processing.card[style="display: none;"]
  .head
    p.title Uploading...
  .body
    .indicator

#upload-image-complete.card[style="display: none;"]
  .head
    i.material-icons.checked check_circle
    p.title Uploade Successfully!
  .body
    #post-image-wrapper
      = image_tag('')
    .input-copy-wrapper
      input#image-url[type="text" value="" readonly]
      button.copy-link Copy Link

scss:
  $green1: #219653;
  $gray2: #4f4f4f;
  $gray3: #828282;
  $gray4: #bdbdbd;
  $blue1: #2f80ed;

  #upload-image-complete {
    width: 400px;
    text-align: center;
  }
  .head {
    i.material-icons {
      font-size: 35px;
      &.checked {
        color: $green1;
      }
    }
  }
  #post-image-wrapper {
    margin: 30px auto;
    border-radius: 12px;
    overflow: hidden;
  }

  .input-copy-wrapper {
    position: relative;

    input[readonly] {
      width: 100%;
      padding-right: 100px;
      text-overflow: ellipsis;
    }

    button {
      position: absolute;
      right: 0;
      height: 38px;
      margin: 2px;
    }
  }

  input {
    box-sizing: border-box;
    height: 42px;
    padding: 0 7px;
    border: 1px solid #E0E0E0;
    border-radius: 8px;

    background: #F6F8F8;
    color: $gray2;
  }

  button {
    box-sizing: border-box;
    padding: 7px 15px;
    border: none;
    border-radius: 8px;

    background: $blue1;
    outline: none;
    cursor: pointer;

    color: #fff;
    font-family: Noto Sans;
    font-style: normal;
  }
