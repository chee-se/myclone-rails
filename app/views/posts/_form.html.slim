#upload-image.card
  .head
    p.title Upload your image
    p.notice File should be Jpeg, Png...
  .body
    #upload-zone
      p.advice Drag & Drop your image here
    |Or
    .button-wrapper
      label.pseudo-button.normal[for="upload-input"] Choose a file
      input#upload-input[type="file"]

#uploading-image.card
  .head
    p.title Uploading...
  .body
    .indicator

scss:
  #uploading-image {
    width: 400px;
    padding-bottom: 13px;
  }

  .indicator {
    position: relative;
    height: 6px;
    width: 349px;
    margin: 10px auto;

    background: #F2F2F2;
    border-radius: 8px;
    overflow: hidden;

    &:before {
      position:absolute;
      top: 0;
      left: -20%;

      content: ".";
      display: block;
      height: 100%;
      width: 50%;

      font-size: 0;
      background: #2F80ED;
      border-radius: 8px;

      animation: 1.5s cubic-bezier(0.6, 0.1, 0.2, 0.8) infinite backwards running indicate;
    }
    @keyframes indicate {
      0% {
        left: -60%;
      }
      100% {
        left: 110%;
      }
    }
  }
